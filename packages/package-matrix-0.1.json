{
    "projectName": "Matrix",
    "license": "Matrix - A Mobile WebApp Framework\nhttp://github.com/mxjs/matrix\n\nAuthor: max<zhangdaiping@gmail.com>\n\nThis version of Matrix is licensed under the MIT License.\nhttp://github.com/mxjs/matrix/blob/master/MIT-LICENSE.md",
    "packages": [
        {
            "name": "Third Party JavaScript Libraries",
            "target": "pkgs/libs.js",
            "id": "libs",
            "files": [
                {
                    "path": "lib/",
                    "name": "jquery-1.9.1.js"
                },
                {
                    "path": "lib/",
                    "name": "jquery.mobile-1.3.0-lite.js"
                },
                {
                    "path": "lib/",
                    "name": "artTemplate-1.4.0.js"
                }
            ]
        },
        {
            "name": "Matrix Core",
            "target": "pkgs/core.js",
            "id": "core",
            "files": [
                {
                    "path": "",
                    "name": "matrix.js"
                },
                {
                    "path": "klass/",
                    "name": "klass-manager.js"
                },
                {
                    "path": "klass/",
                    "name": "base.js"
                },
                {
                    "path": "klass/",
                    "name": "klass.js"
                }
            ]
        },
        {
            "name": "Utils",
            "target": "pkgs/utils.js",
            "id": "utils",
            "files": [
                {
                    "path": "util/",
                    "name": "dispatcher.js"
                },
                {
                    "path": "klass/",
                    "name": "utility.js"
                },
                {
                    "path": "util/",
                    "name": "localstorage.js"
                },
                {
                    "path": "util/",
                    "name": "format.js"
                },
                {
                    "path": "util/",
                    "name": "dateformat.js"
                },
                {
                    "path": "util/",
                    "name": "collection.js"
                }
            ]
        },
        {
            "name": "Appliaction Framework",
            "target": "pkgs/app.js",
            "id": "app",
            "files": [
                {
                    "path": "app/",
                    "name": "template.js"
                },
                {
                    "path": "app/",
                    "name": "model.js"
                },
                {
                    "path": "app/",
                    "name": "store.js"
                },
                {
                    "path": "app/",
                    "name": "view.js"
                },
                {
                    "path": "app/",
                    "name": "controller.js"
                },
                {
                    "path": "app/",
                    "name": "pagelet.js"
                },
                {
                    "path": "app/",
                    "name": "application.js"
                }
            ]
        }
    ],
    "builds": [
        {
            "name": "All Debug",
            "target": "matrix.js",
            "packages": [
                "libs",
                "core",
                "utils",
                "app"
            ]
        },
        {
            "name": "All Min",
            "target": "matrix.min.js",
            "compress": true,
            "packages": [
                "libs",
                "core",
                "utils",
                "app"
            ]
        }
    ],
    "resources": [
        {
            "src": "build/",
            "dest": "build/",
            "filters": ".*"
        },
        {
            "src": "packages/",
            "dest": "packages/",
            "filters": "package\\-matrix\\-0\\.1\\.json"
        },
        {
            "src": "src/",
            "dest": "src/",
            "filters": ".*"
        },
        {
            "src": "resources/",
            "dest": "resources/",
            "filters": ".*"
        },
        {
            "src": "examples/",
            "dest": "examples/",
            "filters": ".*"
        },
        {
            "src": "test/",
            "dest": "test/",
            "filters": ".*"
        }
    ]
}